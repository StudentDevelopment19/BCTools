<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.studev19.bctools"
    android:versionCode="3"
    android:versionName="1.1">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <application
        android:name="com.example.studev19.bctools.parseApplicationSetup"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_no_background"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.studev19.bctools.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.studev19.bctools.directoryDetailedActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_directory_detailed">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.studev19.bctools.MainActivity" />
        </activity>
        <activity
            android:name="com.example.studev19.bctools.eventDetailedActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_event_detailed">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.studev19.bctools.MainActivity" />
        </activity>
        <activity
            android:name="com.example.studev19.bctools.dealDetailedActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_deal_detailed">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.studev19.bctools.MainActivity" />
        </activity>
    </application>

</manifest>
