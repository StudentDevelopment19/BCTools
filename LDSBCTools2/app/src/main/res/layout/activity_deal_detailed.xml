<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.example.studev19.bctools.dealDetailedActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.parse.ParseImageView
            android:id="@+id/imgDealImage"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:adjustViewBounds="true"
            android:elevation="3dp"
            android:scaleType="centerCrop" />

        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar_transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/infoBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgDealImage"
            android:background="@color/primaryColor"
            android:elevation="3dp">

            <TextView
                android:id="@+id/txtDealName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:fontFamily="Roboto Regular"
                android:hint="Deal Title"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:textColor="@color/iconsColor"
                android:textSize="24sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/txtDealDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/infoBox"
            android:fontFamily="Roboto Regular"
            android:hint="Service Description"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:textColor="@color/secondaryTextColor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/txtDealDescription"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/dividerColor" />

        <ImageView
            android:id="@+id/icoDealCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/divider"
            android:layout_marginLeft="16dp"
            android:paddingTop="8dp"
            android:src="@drawable/ic_company" />

        <TextView
            android:id="@+id/txtDealCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider"
            android:layout_marginLeft="72dp"
            android:layout_marginRight="16dp"
            android:fontFamily="Roboto Regular"
            android:hint="Deal Company"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/icoDealLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtDealCompany"
            android:layout_marginLeft="16dp"
            android:paddingTop="8dp"
            android:src="@drawable/ic_location_custom" />

        <TextView
            android:id="@+id/txtDealAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDealCompany"
            android:layout_marginLeft="72dp"
            android:layout_marginRight="16dp"
            android:fontFamily="Roboto Regular"
            android:hint="Deal Address"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/icoEventSchedule"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtDealAddress"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_schedule_custom" />

        <TextView
            android:id="@+id/txtDealDates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDealAddress"
            android:layout_marginLeft="72dp"
            android:layout_marginRight="16dp"
            android:fontFamily="Roboto Regular"
            android:hint="Deal Start Date"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:textSize="16sp" />


    </RelativeLayout>

</ScrollView>