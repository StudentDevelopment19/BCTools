<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="88dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtDealRowTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fontFamily="Roboto Regular"
        android:hint="Deal Title"
        android:paddingTop="16dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtDealRowDesc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDealRowTitle"
        android:fontFamily="Roboto Regular"
        android:hint="Deal Description"
        android:textSize="14sp"
        android:textColor="@color/secondaryTextColor"/>

    <TextView
        android:id="@+id/txtDealRowComp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDealRowDesc"
        android:fontFamily="Roboto Regular"
        android:hint="Deal Company"
        android:textSize="14sp"
        android:textColor="@color/secondaryTextColor"/>

    <com.parse.ParseImageView
        android:layout_width="100dp"
        android:layout_height="56dp"
        android:id="@+id/imgDealRowImage"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>